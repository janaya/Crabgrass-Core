#permissions_area
  = formy(:table_form) do |f|

    - f.heading :visibility.t
    - for gate_name in [:view, :see_groups, :see_contacts] do
      - gate = current_user.gate(gate_name)
      - f.row do |r|
        - r.label gate.label.t
        - r.input castle_gate_tag(current_user, gate_name, @holders)
        - r.info  gate.info.t

    - f.heading :sharing_and_requests.t
    - for gate_name in [:pester, :request_contact] do
      - gate = current_user.gate(gate_name)
      - f.row do |r|
        - r.label gate.label.t
        - r.input castle_gate_tag(current_user, gate_name, @holders)
        - r.info  gate.info.t

  .p.key
    = formy(:dictionary) do |f|
      - f.title :permissions_key.tcap + ':'
      - @holders.each do |holder|
        - f.row do |r|
          - r.label holder.definition.label.t
          - r.info  holder.definition.info.t
